<div class="report-container">
  <div class="user-report">
    <div class="report-avatar">
      <%# <%= cl_image_tag(@report.user.photo.attach, crop: :fill, class: "avatar-extra-large") %> %>
    <%= @report.user.country %>
    </div>
    <div class="report-des">
      <p><%= @report.user.first_name %> <%= @report.user.last_name %></p>
      <p><strong><%= @report.category.capitalize %></strong></p>
      <p> <%= @report.report_date_time.strftime("%d %b %Y at %Hh%M") %> </p>
    </div>
    <div class="report-marker">
      <% if @report.risk_level == 0  %>
       <div class="heat-marker hm-yellow"></div>
      <% elsif @report.risk_level == 1 %>
       <div class="heat-marker hm-orange"></div>
      <% else @report.risk_level == 2 %>
       <div class="heat-marker hm-red"></div>
      <% end %>
    </div>
  </div>
  <div class="incident-container">
    <div class="incident-des">

      <div class="description">
      <h1>Incident description</h1>
        <%= @report.description %>
      </div>
    </div>
    <div class="incident-images-container">
      <h1>Pictures</h1>
      <%# waiting for images %>
      <div class="incident-images">
        <div class="inc-image"></div>
        <div class="inc-image"></div>
      </div>
    </div>
    <div class="incident-comment">
      <h1>Comment</h1>
      <%  unless @report.feedbacks.empty? %>
      <div class="comment">
        <%= @report.feedbacks.first.comment %>
      </div>
      <% end %>
      <%= link_to "View all comments...", report_feedbacks_path(@report), { :class=>'view-link' }  %>
    </div>

    <hr id="hr">

    <div class="commment-input">
      <form action="" method="post" id="comment-form">
        <input class="comment-section" type="text" placeholder="Write a comment" />
        <%= button_tag( :class => "send-btn") do %>
          <i class="fas fa-arrow-circle-up"></i>
        <% end %>
      </form>
    </div>
  </div>
</div>
